    <main>
      <div class="card-container">
        <div class="card-nav">
          <a href="history"><i class="bi bi-check-circle"></i></a>
          <h1 class="card-header">Task Manager</h1>
          <a href="addTask"><i class="bi bi-clipboard2-plus"></i></a>
        </div>

        <!-- Dynamically generate task title links with priority level where task view key value is true -->

        <div class="task-list-container">
          <% taskList.forEach(task => { %> <% if (task.view) { %>
          <a href="/viewTask/<%= task.taskId %>" class="card-link">
            <div class="card-list">
              <span class="card-list-item <%= task.priority %>"></span>
              <p class="card-list-item title"><%= task.title %></p>
            </div>
          </a>
          <% } %> <% }); %>
