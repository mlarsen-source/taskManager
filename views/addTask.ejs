<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/default.css" />
    <link rel="stylesheet" href="/css/add.css" />
    <link rel="icon" type="image/png" href="/images/add.png" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css"
    />
    <script src="js/validationAddTask.js" defer></script>
    <title>Add Task</title>
  </head>
  <body>
    <div class="card-container">
      <div class="card-nav">
        <a href="/"><i class="bi bi-house-door"></i></a>
        <h1 class="card-header">Add New Task</h1>
        <div></div>
      </div>
      <div class="form-container">
        <form action="createTask" method="post" id="add-task-form">
          <div class="form-sub-container">
            <label class="form-title"> Task Title </label>
            <input type="text" id="title" name="title" class="form-input" />
            <span class="err" id="err-title">Title is required</span>
          </div>
          <div class="form-sub-container">
            <label class="form-title"> Description </label>
            <textarea
              class="form-input form-input-text"
              id="description"
              name="description"
            ></textarea
            ><span class="err" id="err-description"
              >Description is required</span
            >
          </div>
          <div class="form-sub-container">
            <label class="form-title"> Due Date </label>
            <input
              type="date"
              class="form-input"
              id="dueDate"
              name="dueDate"
            /><span class="err" id="err-dueDate">Date is required</span>
          </div>
          <div class="form-sub-container">
            <label class="form-title"> Location </label>
            <input
              type="text"
              id="location"
              name="location"
              class="form-input"
            /><span class="err" id="err-location">Location is required</span>
          </div>

          <div class="form-sub-container">
            <label class="form-title">Priority</label>
            <div>
              <label class="form-title"
                ><input
                  type="radio"
                  name="priority"
                  value="Low"
                  checked
                />Low</label
              >
              <label class="form-title"
                ><input
                  type="radio"
                  name="priority"
                  value="Medium"
                />Medium</label
              >
              <label class="form-title"
                ><input type="radio" name="priority" value="High" />High</label
              >
            </div>
          </div>
          <div class="form-sub-container">
            <label class="form-title">
              Task Type
              <select
                class="form-input"
                id="type"
                name="type"
                title="Please select a type"
              >
                <option value="General">General</option>
                <option value="Work">Work</option>
                <option value="School">School</option>
                <option value="Personal">Personal</option>
                <option value="Financial">Financial</option>
                <option value="Health">Health</option>
                <option value="Travel">Travel</option>
              </select>
            </label>
          </div>

          <div class="form-btn-container">
            <input id="button" type="submit" value="Add" class="submit-btn" />
          </div>
        </form>
      </div>
    </div>
    <script src="js/futureDate.js"></script>
  </body>
</html>
